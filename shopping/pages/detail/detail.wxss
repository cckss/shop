/* pages/detail/detail.wxss */
swiper{
  height: 750rpx;
}
swiper image{
  width: 100%;
  height: 750rpx;
}
.detail-info{
  background: white;
  /* 相对定位 */
  position: relative;
  padding-top: 20rpx;
}
.detail-title{
height: 100rpx;
font-size: 32rpx;
color: #5f5f5f;
line-height: 48rpx;
/* 右边外边框 */
padding-right: 150rpx;
/* 右边外边框 */
/* 多行文本溢出 */
padding-left: 10rpx;
text-overflow: ellipsis;
word-wrap: break-word;
overflow: hidden;
display: -webkit-box;
-webkit-line-clamp: 2; /*行数*/
-webkit-box-orient: vertical;
}

.icon-sc{
width: 100rpx;
height: 80rpx;
position: absolute;
right: 0;
top: 20rpx;
/* 字体水平居中 */
text-align: center;
font-size: 24rpx;
padding-top: 14rpx;
color: #5f5f5f;
border-left: 1rpx solid #e7e7e7;
}
.icon-sc image{
  width: 30rpx;
  height: 30rpx;
}
.price{
  height: 100rpx;
  background: white;
  line-height: 100rpx;
  /* border-bottom: 1rpx solid gray; */
}
.x-price{
color: red;
font-size: 36rpx;
padding-left: 10rpx;
}
.y-price{
/* 删除线 */
text-decoration: line-through;
color: #5f5f5f;
}
.border{
  height: 1rpx;
  background: #f5f6f7;
  /* 左右外边距 */
  margin: 0 10rpx;
}
.send-box{
  height: 80rpx;
  background: white;
  line-height: 80rpx;
  /* 字体缩进 */
  /* 缩进一个字体 */
  text-indent: 20rpx;
  /* 内边距 */
  /* padding-left: 20rpx; */
  color: #5f5f5f;
}
.prduct-detail{
  margin-top: 30rpx;
  background: white;
}
.footer{
  position: fixed;
  height: 100rpx;
  width: 100vw;
  background: pink;
  bottom: 0;
  /* 弹性布局 */
  display: flex;
}
.footer > view{
  width: 25%;
  text-align: center;
  line-height: 100rpx;
  color:white;
  font-size: 24rpx;
}
.car-icon{
  background: #ffffff;
  position: relative;
}
.car-icon image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}
.num{  
  height: 30rpx;
  width: 30rpx;
  background: red;
  position: absolute;
  top: 0;
  line-height: 30rpx;
  /* 圆角边框 */
  border-radius: 50%;
}

.go-index{
  background: #ffa500;
}

.add-car{
background: #00aaef;
}

.go-buy{
  background: #69c3aa;
}